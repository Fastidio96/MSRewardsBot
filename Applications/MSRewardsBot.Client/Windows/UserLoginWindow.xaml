<Window x:Class="MSRewardsBot.Client.Windows.UserLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSRewardsBot.Client.Windows"
        mc:Ignorable="d"
        Title="MS Rewards Bot Client"
        Height="275" Width="400" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"
        Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20 0" VerticalAlignment="Center">
            <TextBlock 
                Name="lblTitle"
                Text="Log in" 
                FontSize="18" FontWeight="DemiBold" 
                Margin="0 0 0 10" HorizontalAlignment="Center"/>
            <Label>Username</Label>
            <TextBox TabIndex="0" Name="txtUsername" MaxLength="32"/>
            <Label>Password</Label>
            <TextBox TabIndex="1" Name="txtPassword" MaxLength="32"/>
            <Button Content="Submit" Margin="0 20" Name="btnSubmit" Click="BtnSubmit_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="20 0" HorizontalAlignment="Right">
            <ToggleButton Content="Register new account" Name="btnToggle" Click="ToggleButton_Click" Padding="10 0"/>
        </StackPanel>
    </Grid>
</Window>
